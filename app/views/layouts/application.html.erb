<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <h1>Avion Rails Journal</h1>
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <% if current_page?("/") %>
            <li class="active">
            <% else %>
            <li>
            <% end %>
              <%= link_to 'Home', root_path %>
            </li>
            <% if current_page?("/categories") %>
            <li class="active">
            <% else %>
            <li>
            <% end %>
              <%= link_to 'Categories', categories_path %>
            </li>
            <% if current_page?("/tasks") %>
            <li class="active">
            <% else %>
            <li>
            <% end %>
              <%= link_to 'All Tasks', tasks_path %>
            </li>
            <li>
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <% if current_page?("/users/sign_in") %>
            <li class="active">
            <% else %>
            <li>
            <% end %>
              <%= link_to 'Sign In', new_user_session_path %>
            </li>
            <% if current_page?("/users/sign_up") %>
            <li class="active">
            <% else %>
            <li>
            <% end %>
              <%= link_to 'Register', new_user_registration_path %>
            </li>
          <% end %>
        </ul>
      </div>
    </header>
    <main>
      <div id="overlayContainer">
        <% flash.each do |type, msg| %>
          <% if type == "success" %>
          <div class="alert" style="background: #050;">
          <% elsif type == "error" %>
          <div class="alert" style="background: #A00;">
          <% end %>
            <%= msg %>
          </div>
        <% end %>
      </div>
      <div class="container">
        <%= yield %>
      </div>
    </main>
  </body>
  <script>
    alerts = document.querySelectorAll(".alert");
    for(alert of alerts) {
      setInterval(() => {
        alert.remove();
      }, 2000);
    }
  </script>
</html>
