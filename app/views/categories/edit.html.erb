<p>
  <% if @category.errors.any?  %>
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>     
</p>

<%= form_with scope: :category, url: update_category_path, local: true, method: :patch do |f|  %>
  <p>
    <%= f.label :name %>
    <%= f.text_field "name", :class => 'name' %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Save", :class => 'submit' %>
  </p>
<% end %>

<div class="others">
  <%= link_to 'Delete', delete_category_path(@category.id), method: :delete, data: {confirm: "Are you sure?"} %>
  <%=  link_to 'Back to Categories', categories_path %>
</div>
