<%= form_with scope: :category, url: create_category_path, local: true do |f|  %>
  <p>
    <% if @category.errors.any?  %>
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    <% end %>     
  </p>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'name' %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Save", :class => 'submit' %>
  </p>
<% end %>
<div class="others">
  <%=  link_to 'Back to Categories', categories_path %>
</div>