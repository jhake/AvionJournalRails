<h1>Tasks due today</h1>

<%= link_to "New Task", new_task_path, class: "button" %>

<% @tasks_incomplete.each do |task| %>
  <% category = Category.find(task.category_id) %>
  <div class="task-item">
    <h3><%= link_to task.name, show_task_path(task.id) %> (<%= link_to category.name, show_category_path(category.id) %>)</h3>
    <%= link_to "Edit", edit_task_path(task.id) %>
    <p><%= task.details %></p>
    <ul>
      <% if task.deadline %>
        <li>Deadline: <%= task.deadline %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% @tasks_completed.each do |task| %>
  <% category = Category.find(task.category_id) %>
  <div class="task-item completed">
    <h3><%= link_to task.name, show_task_path(task.id) %> (<%= link_to category.name, show_category_path(category.id) %>)</h3>
    <p><%= task.details %></p>
    <ul>
      <% if task.deadline %>
        <li>Deadline: <%= task.deadline %></li>
      <% end %>
    </ul>
    <%= link_to "Edit", edit_task_path(task.id) %>
  </div>
<% end %>